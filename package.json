{
  "name": "murielg.github.io",
  "version": "1.0.0",
  "description": "Jekyll Blog",
  "main": "index.js",
  "config": {
    "theme": "_dev",
    "dist": "assets"
  },
  "scripts": {
    "start": "npm run build -s && parallelshell \"npm run serve -s\" \"npm run watch:jekyll -s\" \"npm run watch:css -s\" \"npm run watch:js -s\"",
    "clean": "rm -rf _site",
    "serve": "browser-sync start --server _site",
    "build": "npm run clean && npm run build:css && npm run build:js && npm run build:jekyll",
    "build:css": "node-sass --include-path node_modules/bourbon/app/assets/stylesheets/ $npm_package_config_theme/scss/style.scss --output-style compressed >  $npm_package_config_dist/css/style.css",
    "build:js": "browserify $npm_package_config_theme/js/index.js -d -p [minifyify --map $npm_package_config_theme/js/bundle.js.map --output $npm_package_config_dist/js/bundle.js.map] > $npm_package_config_dist/js/bundle.js",
    "build:jekyll": "bundle exec jekyll build --incremental",
    "watch:jekyll": "chokidar '*' 'index.html' '_includes/*.html' '_layouts/*.html' '_posts/*' -c 'npm run build:jekyll'",
    "watch:css": "chokidar '_dev/scss/**/*' -c 'npm run watch:css_site && browser-sync reload'",
    "watch:css_site": "node-sass --include-path node_modules/bourbon/app/assets/stylesheets/ --output-style compressed $npm_package_config_theme/scss/style.scss _site/assets/css/style.css",
    "watch:js": "chokidar '_dev/js/*' -c 'npm run watch:js_site && browser-sync reload'",
    "watch:js_site": "watchify $npm_package_config_theme/js/index.js --debug -o _site/assets/js/bundle.js"
  },
  "private": true,
  "devDependencies": {
    "bourbon": "^4.2.7",
    "browser-sync": "^2.18.2",
    "browserify": "^13.0.1",
    "live-server": "^1.0.0",
    "minifyify": "^7.3.3",
    "node-sass": "^3.13.0",
    "nodemon": "*",
    "parallelshell": "^2.0.0",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "chokidar": "^1.6.1",
    "jquery": "^2.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/murielg/murielg.github.io.git"
  },
  "author": "Muriel Gonzalez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/murielg/murielg.github.io/issues"
  }
}
